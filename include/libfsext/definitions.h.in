/* The extent flag definitions
 */
enum LIBFSEXT_EXTENT_FLAGS
{
	/* The extent is sparse
	 */
        LIBFSEXT_EXTENT_FLAG_IS_SPARSE					= 0x00000001UL,

	/* The extent is compressed
	 */
        LIBFSEXT_EXTENT_FLAG_IS_COMPRESSED				= 0x00000002UL
};

#endif

